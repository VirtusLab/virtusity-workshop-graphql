{
  "extends": [
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:@typescript-eslint/recommended",
    "airbnb-base"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "arrow-parens": [
      "error",
      "always"
    ],
    "curly": [
      "error",
      "all"
    ],
    "max-statements-per-line": [
      "error",
      {
        "max": 1
      }
    ],
    "no-duplicate-imports": [
      "error",
      {
        "includeExports": true
      }
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "__resolveType"
        ]
      }
    ],
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always-and-inside-groups"
      }
    ],
    "@typescript-eslint/indent": [
      "error",
      2
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {},
      "node": {
        "extensions": [
          ".js",
          ".json",
          ".ts"
        ]
      }
    }
  }
}
